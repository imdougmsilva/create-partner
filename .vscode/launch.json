{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "localRoot": "${workspaceFolder}/src",
            "remoteRoot": "/app",
            "port": 9221,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ]
}